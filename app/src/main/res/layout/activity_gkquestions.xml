<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.buddies.questionaddingapp.gkquestions">

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Question"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText1"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Choice1"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText02"
        android:layout_below="@+id/editText02"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Choice2"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText03"
        android:layout_below="@+id/editText03"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Choice3"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText04"
        android:layout_below="@+id/editText04"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="Answer"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText05"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="62dp"
        android:text="Submit" />

</RelativeLayout>
